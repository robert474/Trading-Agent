# Trading Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# Polygon.io - Market Data
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Tradier - Brokerage
# Get your key at: https://developer.tradier.com/
TRADIER_ACCOUNT_ID=your_tradier_account_id
TRADIER_ACCESS_TOKEN=your_tradier_access_token
TRADIER_SANDBOX=true  # Set to false for live trading

# Anthropic - Claude AI
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini - Vision AI (optional, for cost-efficient screening)
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL with TimescaleDB
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =============================================================================
# REDIS
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Discord Webhook for trade alerts
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading mode: paper or live
TRADING_MODE=paper

# Timezone for market hours
TIMEZONE=America/New_York

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: News/Sentiment
# =============================================================================

# Benzinga API (optional)
BENZINGA_API_KEY=your_benzinga_key_here
